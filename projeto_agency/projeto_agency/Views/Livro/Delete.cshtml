@model projeto_agency.Models.Livro

@{
    ViewBag.Title = "Deletar livro";
}

<h2>Delete</h2>

<h3>Tem certeza que quer deletar esse livro?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span>Nome do Autor</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.autor.nome)
        </dd>

        <dt>
            <span>Nome do Livro</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            <span>Descrição do livro</span>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar a lista", "Index")
        </div>
    }
</div>
